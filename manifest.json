{
  "manifest_version": 3,
  "name": "PharmaTender - Licitaciones",
  "version": "1.0.0",
  "description": "Automatización inteligente del proceso de licitaciones en PharmaTender y Mercado Público",
  
  "permissions": [
    "activeTab", 
    "storage", 
    "notifications",
    "alarms",
    "tabs"
  ],
  
  "host_permissions": [
    "*://prime.pharmatender.cl/*",
    "*://www.mercadopublico.cl/*",
    "*://mercadopublico.cl/*",
    "*://www.chilecompra.cl/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://prime.pharmatender.cl/*"
      ],
      "js": [
        "config.js", 
        "security-utils.js", 
        "content-licitacion.js",
        "content-platform.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://www.mercadopublico.cl/*",
        "*://mercadopublico.cl/*"
      ],
      "js": [
        "config.js",
        "security-utils.js", 
        "content-licitacion.js"
      ],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "PharmaTender - Automatización de Licitaciones",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "config.js",
        "security-utils.js",
        "icons/*.png"
      ],
      "matches": [
        "*://prime.pharmatender.cl/*",
        "*://www.mercadopublico.cl/*",
        "*://mercadopublico.cl/*"
      ]
    }
  ],
  
  "minimum_chrome_version": "88"
}
